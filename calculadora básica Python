print("Elija su opcion")
print("1 suma")
print("2 resta")
print("3 multiplicacion")
print("4 division")
print("5 apagar sistema")

opcion = 0
while True:
    opcion = int(input("elije una opcion"))

    if opcion == 1:
        num1 = float(input("ingrese el numero:"))
        num2 = float(input("ingrese el 2do numero:"))
        suma = num1+num2
        print("la suma es:",suma)

    elif opcion == 2:
        num1 = float(input("ingrese el numero"))
        num2 = float(input("ingrese el 2do numero"))
        suma = num1 - num2 
        print("la resta es:",suma)

    elif opcion == 3:
        num1 = float(input("ingrese el numero"))
        num2 = float(input("ingrese el 2do numero"))
        suma = num1 * num2 
        print("la multiplicacion es:",suma)
                
    elif opcion == 4:
        num1 = float(input("ingrese el numero"))
        num2 = float(input("ingrese el 2do numero"))
        suma = num1 / num2 
        print("la division es:",suma)

    elif opcion == 5:
        break

    else:
        print("opcion incorrecta")
